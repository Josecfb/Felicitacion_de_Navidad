<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Entrada">

    <ImageView
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondo_nieve"
        android:scaleType="centerCrop"
        android:contentDescription="@string/fondo"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/papa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="50dp"
            android:layout_weight="2"
            android:contentDescription="@string/noel"
            android:gravity="center_vertical"
            app:srcCompat="@drawable/noel" />

        <TextView
            android:id="@+id/texto_entrada"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="@font/christmaseve"
            android:gravity="top"
            android:text="@string/cargando"
            android:textColor="@color/h1"
            android:textSize="50sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adorno1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/adorno1" />

        <ImageView
            android:id="@+id/adorno2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="@string/adorno"
            android:gravity="top"
            app:srcCompat="@drawable/adorno2" />

        <ImageView
            android:id="@+id/adorno3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="@string/adorno"
            android:gravity="top"
            app:srcCompat="@drawable/adorno3" />

        <ImageView
            android:id="@+id/adorno4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="@string/adorno"
            android:gravity="top"
            app:srcCompat="@drawable/adorno4" />

        <ImageView
            android:id="@+id/adorno5"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="@string/adorno"
            android:gravity="top"
            app:srcCompat="@drawable/adorno5" />

        <ImageView
            android:id="@+id/adorno6"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="@string/adorno"
            android:gravity="top"
            app:srcCompat="@drawable/adorno6" />

        <ImageView
            android:id="@+id/adorno7"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="@string/adorno"
            android:gravity="top"
            app:srcCompat="@drawable/adorno7" />

        <ImageView
            android:id="@+id/adorno8"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="@string/adorno"
            android:gravity="top"
            app:srcCompat="@drawable/adorno8" />

        <ImageView
            android:id="@+id/adorno9"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="@string/adorno"
            android:gravity="top"
            app:srcCompat="@drawable/adorno9" />

        <ImageView
            android:id="@+id/adorno10"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="@string/adorno"
            android:gravity="top"
            app:srcCompat="@drawable/adorno10" />
    </LinearLayout>

</FrameLayout>
